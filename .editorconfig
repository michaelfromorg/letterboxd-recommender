# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.{js,jsx,ts,tsx,svelte}]
indent_size = 2

[*.{json,yml,yaml,prettierrc}]
indent_size = 2

[*.{md,css,scss,html}]
indent_size = 2

[Makefile]
indent_style = tab
